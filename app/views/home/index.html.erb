<%= render 'layouts/flash_messages' %>

<div class="mt-5 mb-4">
  <%= link_to 'Importar datos', :import_new_data_home_index, class: 'btn btn-dark' %>
</div>

<% if @sales.count > 0 %>
  <div class="row d-inline">
    <%= page_entries_info @sales %>
  </div>
<% end %>

<div class="row mt-4">
  <%= paginate @sales %>

  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th>Cliente</th>
      <th>Descripción del producto</th>
      <th>Precio por pieza</th>
      <th>Numero de piezas</th>
      <th>Dirección del vendedor</th>
      <th>Nombre del vendedor</th>
    </tr>
    </thead>
    <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.client.name %></td>
        <td><%= sale.product.description %></td>
        <td><%= sale.product.price_per_piece %></td>
        <td><%= sale.amount_of_pieces %></td>
        <td><%= sale.seller.address %></td>
        <td><%= sale.seller.name %></td>
      </tr>
    <% end %>
    <% if @sales.count == 0 %>
      <tr>
        <td colspan="6" class="text-center">No hay datos</td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= paginate @sales %>
</div>
